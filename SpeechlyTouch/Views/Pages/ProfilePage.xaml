                        VerticalAlignment="Center"
                        Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                        Command="{Binding EditCommand}"
                        Content="{Binding EditBtnText}"
                        CornerRadius="3"
                        FontSize="20"
                        FontWeight="Bold"
