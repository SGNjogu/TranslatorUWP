                            HorizontalContentAlignment="Stretch"
                            Background="White"
                            BlurRadius="5"
                            CornerRadius="10"
                            OffsetX="3"
                            OffsetY="3"
                            ShadowOpacity="0.70"
                            Color="{StaticResource BorderColor}">

                            <Border
                                Background="White"
                                BorderBrush="{StaticResource BorderColor}"
                                BorderThickness="1"
                                CornerRadius="3">
                                <TextBox
